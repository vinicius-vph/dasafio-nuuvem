<%= link_to 'Voltar', root_path, class: 'btn btn-outline-dark mt-1' %>
<div class="container">
  <h5 class="mt-4">Lista das transações importadas</h5>
  <div class="d-flex align-items-end mt-3">
    <table class="table table-striped table-hover">
      <thead>
        <tr class="table-primary">
          <th colspan="2" >Nome da Loja</th>
          <th colspan="2" >Receita Bruta Total</th>
        </tr>
      </thead>
      <tbody>  
        <% unless @total_all_time_transactions.any? %>
          <tr>
            <td colspan="4" class="text-danger text-center">Nenhum dado disponível</td>
          </tr>
        <% end %>
        <% @total_all_time_transactions.each do |transaction| %>
          <tr>
            <td colspan="2" class="text-center"><%= transaction.first.name %></td>
            <td colspan="2" class="text-center"><%= number_to_currency(transaction.second) %></td>
          </tr>
        <% end %>
      </tbody>
      <thead>
        <tr class="table-primary">
          <th colspan="2" >Nome da Loja</th>
          <th colspan="2" >Receita Bruta do Último Upload</th>
        </tr>
      </thead>
      <tbody>
        <% unless @total_last_uploaded_transactions.any? %>
          <tr>
            <td colspan="4" class="text-danger text-center">Nenhum dado disponível</td>
          </tr>
        <% end %>
        <% @total_last_uploaded_transactions.each do |transaction| %>
          <tr>
            <td colspan="1" class="text-center"><%= transaction.first.name %></td>
            <td colspan="2" class="text-center"><%= number_to_currency(transaction.second) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>